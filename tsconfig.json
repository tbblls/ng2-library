{
    "compilerOptions": {
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es5",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "inlineSourceMap": true,
      "inlineSources": true,
      "declaration": true,
      "moduleResolution": "node"
    },
    "filesGlob": [
        "./**/*.ts",
        "./typings/index.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}
